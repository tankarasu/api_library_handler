{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "never"
      }
    ],
    "no-compare-neg-zero": "error",
    "no-regex-spaces": "error",
    "template-tag-spacing": [
      "error",
      "never"
    ],
    "space-infix-ops": "error",
    "space-unary-ops": [
      "error",
      {
        "words": true,
        "nonwords": false,
        "overrides": {
          "++": false
        }
      }
    ],
    "template-curly-spacing": [
      "error",
      "never"
    ],
    "generator-star-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "arrow-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "space-before-blocks": ["error",{
        "functions": "never",
        "keywords": "always",
        "classes": "never"
      }],
    "rest-spread-spacing": [
      "error",
      "never"
    ],
    "no-const-assign": "error",
    "no-duplicate-imports": "error",
    "no-self-assign": "error",
    "no-irregular-whitespace": "error",
    "no-unreachable": "error",
    "prefer-const": "error",
    "prefer-destructuring": "error",
    "no-var": "error",
    "yield-star-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "no-multi-spaces": "error",
      "func-call-spacing": [
        "error",
        "never"
      ],
    "array-bracket-spacing": ["error", "never"],
    "key-spacing": [
      "error",
      {
        "beforeColon": false
      }
    ],
    "computed-property-spacing": [
          "error",
          "never"
      ],
    "no-useless-constructor": "error",
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true,
        "overrides": {
          "if": {
            "after": false
          },
          "for": {
            "after": false
          },
          "while": {
            "after": false
          }
        }
      }
    ],
    "no-whitespace-before-property": "error",
    "object-curly-spacing": [
      "error",
      "never"
    ],
    "block-spacing": "error",
    "camelcase": "error",
    "no-trailing-spaces": "error",
    "no-inline-comments": "error",
    "newline-before-return": "error",
    "sort-imports": "off",
    "sort-keys": "off",
    "max-len": [
      "error",
      {
        "code": 110,
        "comments": 110
      }
    ],
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "semi-style": [
      "error",
      "last"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "switch-colon-spacing": [
      "error",
      {
        "after": true,
        "before": false
      }
    ],
    "space-in-parens": [
      "error",
      "never"
    ],
    "spaced-comment": [
      "error",
      "always"
    ],
    "init-declarations": "error",
    "no-delete-var": "error",
    "no-label-var": "error",
    "no-undef": "error",
    "no-undefined": "error",
    "no-restricted-globals": "error",
    "no-unused-vars": "error",
    "no-undef-init": "warn",
    "no-shadow": "off",
    "no-shadow-restricted-names": "error",
    "no-use-before-define": [
      "error",
      {
        "functions": true,
        "classes": true
      }
    ],
    "@typescript-eslint/ban-ts-comment": "off",
    "@typescript-eslint/no-explicit-any": [
      "error",
      {
        "ignoreRestArgs": true
      }
    ],
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "@typescript-eslint/no-empty-interface": "error",
    "@typescript-eslint/no-inferrable-types": "error"
  },
  "overrides": [
    {
      "files": [
        "*-test.ts",
        "*.spec.ts"
      ],
      "rules": {
        "no-unused-expressions": "off",
        "max-len": [
          "error",
          {
            "code": 120,
            "comments": 120
          }
        ]
      }
    }
  ]
}
